---
import PublicLayout from '../../layouts/PublicLayout.astro';

const { id } = Astro.params;

// Fetch tournament data from unified source
const response = await fetch(`${Astro.url.origin}/api/tournaments-data`);
const tournaments = await response.json();
const tournament = tournaments.find(t => t.id === id);

if (!tournament) {
  return Astro.redirect('/torneos');
}

const statusMap = {
  proximamente: { text: 'Próximamente', class: 'bg-yellow-100 text-yellow-800' },
  'inscripciones-abiertas': { text: 'Inscripciones Abiertas', class: 'bg-green-100 text-green-800' },
  'en-curso': { text: 'En Curso', class: 'bg-blue-100 text-blue-800' },
  finalizado: { text: 'Finalizado', class: 'bg-slate-100 text-slate-800' },
};
---

<PublicLayout title={`${tournament.titulo} - Copa Litoral`} description={tournament.descripcion}>
  <!-- Hero Section -->
  <section class="relative py-16 bg-gradient-to-br from-blue-900 via-blue-800 to-orange-600">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{tournament.titulo}</h1>
      <p class="text-xl text-white/90 mb-6">{tournament.descripcion}</p>
      <div class="flex flex-wrap justify-center gap-4 text-white/90">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          <span>{tournament.lugar}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
          <span>{tournament.fechas}</span>
        </div>
      </div>
      <div class="mt-6">
        <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${statusMap[tournament.estado]?.class || 'bg-gray-100 text-gray-800'}`}>
          {statusMap[tournament.estado]?.text || tournament.estado}
        </span>
      </div>
    </div>
  </section>

  <!-- Tournament Details -->
  <section class="py-12 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Tournament Info -->
        <div class="lg:col-span-2">
          <div class="bg-slate-50 rounded-lg p-6 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Información del Torneo</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <h3 class="font-semibold text-gray-700">Formato</h3>
                <p class="text-gray-600">{tournament.formato}</p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-700">Fecha Límite Inscripción</h3>
                <p class="text-gray-600">{new Date(tournament.fechaLimiteInscripcion).toLocaleDateString('es-CL')}</p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-700">Año</h3>
                <p class="text-gray-600">{tournament.anio}</p>
              </div>
              <div>
                <h3 class="font-semibold text-gray-700">Estado</h3>
                <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${statusMap[tournament.estado]?.class || 'bg-gray-100 text-gray-800'}`}>
                  {statusMap[tournament.estado]?.text || tournament.estado}
                </span>
              </div>
            </div>
          </div>

          <!-- Categories -->
          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Categorías</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {tournament.categorias.map(categoria => (
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex justify-between items-start mb-3">
                    <h3 class="font-semibold text-gray-900">{categoria.nombre}</h3>
                    <span class="text-sm text-gray-500">{categoria.inscriptos}/{categoria.maxJugadores}</span>
                  </div>
                  
                  <!-- Progress Bar -->
                  <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
                    <div 
                      class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                      style={`width: ${(categoria.inscriptos / categoria.maxJugadores) * 100}%`}
                    ></div>
                  </div>
                  
                  <div class="text-sm text-gray-600">
                    <div class="flex justify-between">
                      <span>Socio: ${categoria.precio.socio.toLocaleString('es-CL')}</span>
                      <span>General: ${categoria.precio.general.toLocaleString('es-CL')}</span>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Actions -->
          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Acciones</h3>
            <div class="space-y-3">
              {tournament.estado === 'inscripciones-abiertas' && (
                <a href={`/inscripcion?torneo=${tournament.id}`} class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 text-center block">
                  Inscribirse
                </a>
              )}
              <button class="w-full bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700">
                Ver Bases
              </button>
              {tournament.estado === 'finalizado' && (
                <a href={`/torneos/${tournament.id}/resultados`} class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 text-center block">
                  Ver Resultados
                </a>
              )}
            </div>
          </div>

          <!-- Tournament Stats -->
          <div class="bg-slate-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Estadísticas</h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600">Total Categorías:</span>
                <span class="font-semibold">{tournament.categorias.length}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Total Inscriptos:</span>
                <span class="font-semibold">{tournament.categorias.reduce((sum, cat) => sum + cat.inscriptos, 0)}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Capacidad Total:</span>
                <span class="font-semibold">{tournament.categorias.reduce((sum, cat) => sum + cat.maxJugadores, 0)}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Ocupación:</span>
                <span class="font-semibold">
                  {Math.round((tournament.categorias.reduce((sum, cat) => sum + cat.inscriptos, 0) / tournament.categorias.reduce((sum, cat) => sum + cat.maxJugadores, 0)) * 100)}%
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</PublicLayout>
