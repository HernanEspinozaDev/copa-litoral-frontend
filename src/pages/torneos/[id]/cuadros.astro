---
// src/pages/torneos/[id]/cuadros.astro
import PublicLayout from '../../../layouts/PublicLayout.astro';

const { id } = Astro.params;

// Fetch tournament brackets data from API
let tournamentData = null;
let error = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/torneos/${id}/cuadros`);
  const result = await response.json();
  
  if (result.success) {
    tournamentData = result.data;
  } else {
    error = result.error || 'Tournament not found';
  }
} catch (e) {
  error = 'Error loading tournament data';
  console.error('Error fetching tournament brackets:', e);
}

// Fallback data if API fails
if (!tournamentData) {
  tournamentData = {
    tournament: {
      title: 'Torneo no encontrado',
      year: new Date().getFullYear(),
      status: 'unknown'
    },
    categories: [],
    stats: {
      totalCategories: 0,
      totalMatches: 0,
      totalPlayers: 0,
      completed: false
    }
  };
}

const title = `Cuadros - ${tournamentData.tournament.title}`;
const description = `Cuadros y resultados completos del ${tournamentData.tournament.title}`;
---

<PublicLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-green-900 via-green-800 to-blue-600">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{tournamentData.tournament.title}</h1>
      <p class="text-xl text-white/90 max-w-2xl mx-auto">
        Cuadros y resultados completos
      </p>
    </div>
  </section>

  <!-- Brackets Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4">
      {error && (
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
          <h2 class="text-lg font-semibold text-red-800 mb-2">Error</h2>
          <p class="text-red-700">{error}</p>
        </div>
      )}

      {tournamentData.categories.length === 0 ? (
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-yellow-800 mb-2">Sin Resultados</h2>
          <p class="text-yellow-700">Este torneo a√∫n no tiene resultados disponibles.</p>
        </div>
      ) : (
        <>
          <!-- Categories Section with Cascading Display -->
          <div class="space-y-6">
            {tournamentData.categories.map((category, index) => (
              <details class="bg-white rounded-xl shadow-lg overflow-hidden group">
                <summary class="bg-gradient-to-r from-green-600 to-blue-600 p-6 cursor-pointer flex items-center justify-between">
                  <div>
                    <h2 class="text-2xl font-bold text-white">{category.name}</h2>
                    <div class="mt-2 flex gap-4">
                      <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">
                        üèÜ {category.winner || 'Por definir'}
                      </span>
                      <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">
                        ü•à {category.finalist || 'Por definir'}
                      </span>
                    </div>
                  </div>
                  <svg class="w-6 h-6 text-white transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>

                <div class="p-8 space-y-8">
                  <!-- Champions Section -->
                  <div class="grid md:grid-cols-2 gap-6">
                    <div class="bg-gradient-to-br from-yellow-50 to-orange-50 rounded-lg p-6 border border-yellow-200">
                      <div class="text-center">
                        <div class="w-16 h-16 bg-yellow-500 rounded-full mx-auto mb-4 flex items-center justify-center">
                          <span class="text-3xl">üëë</span>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-2">Campe√≥n</h3>
                        <p class="text-lg font-medium text-green-700">{category.winner || 'Por definir'}</p>
                      </div>
                    </div>
                    <div class="bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg p-6 border border-slate-200">
                      <div class="text-center">
                        <div class="w-16 h-16 bg-slate-400 rounded-full mx-auto mb-4 flex items-center justify-center">
                          <span class="text-3xl">ü•à</span>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-2">Finalista</h3>
                        <p class="text-lg font-medium text-slate-700">{category.finalist || 'Por definir'}</p>
                      </div>
                    </div>
                  </div>

                  <!-- Bracket Rounds -->
                  <div class="space-y-6">
                    {category.bracket.map(round => (
                      <div class="bg-slate-50 rounded-lg p-6">
                        <h3 class="text-xl font-semibold text-slate-900 mb-4 flex items-center">
                          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          {round.round}
                        </h3>
                        <div class="grid gap-4">
                          {round.matches.map(match => (
                            <div class="bg-white rounded-lg p-4 shadow-sm border border-slate-200">
                              <div class="flex items-center justify-between">
                                <div class="flex-1">
                                  <div class="flex items-center justify-between mb-2">
                                    <div class={`font-medium text-lg ${match.winner === match.player1 ? 'text-green-700 font-bold' : 'text-slate-700'}`}>
                                      {match.player1}
                                      {match.winner === match.player1 && <span class="ml-2 text-green-600">‚úì</span>}
                                    </div>
                                    <div class="text-sm font-medium text-slate-600 bg-slate-100 px-3 py-1 rounded">
                                      {match.score}
                                    </div>
                                  </div>
                                  <div class="text-center text-slate-400 text-sm font-medium my-1">VS</div>
                                  <div class="flex items-center justify-between">
                                    <div class={`font-medium text-lg ${match.winner === match.player2 ? 'text-green-700 font-bold' : 'text-slate-700'}`}>
                                      {match.player2}
                                      {match.winner === match.player2 && <span class="ml-2 text-green-600">‚úì</span>}
                                    </div>
                                  </div>
                                </div>
                              </div>
                              {match.fecha && (
                                <div class="mt-3 pt-3 border-t border-slate-100">
                                  <div class="text-xs text-slate-500 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    {new Date(match.fecha).toLocaleDateString('es-ES', { 
                                      weekday: 'long', 
                                      year: 'numeric', 
                                      month: 'long', 
                                      day: 'numeric' 
                                    })}
                                  </div>
                                </div>
                              )}
                            </div>
                          ))}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </details>
            ))}
          </div>

          <!-- Statistics -->
          <div class="bg-white rounded-xl shadow-lg p-8 mt-8">
            <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center">
              <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Estad√≠sticas del Torneo
            </h2>
            <div class="grid md:grid-cols-4 gap-6">
              <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-6 text-center">
                <div class="text-3xl font-bold text-blue-600">{tournamentData.stats.totalCategories}</div>
                <div class="text-slate-600 font-medium">Categor√≠as</div>
              </div>
              <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-6 text-center">
                <div class="text-3xl font-bold text-green-600">{tournamentData.stats.totalMatches}</div>
                <div class="text-slate-600 font-medium">Partidos Jugados</div>
              </div>
              <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-lg p-6 text-center">
                <div class="text-3xl font-bold text-orange-600">{tournamentData.stats.totalPlayers}</div>
                <div class="text-slate-600 font-medium">Jugadores Participantes</div>
              </div>
              <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-6 text-center">
                <div class="text-3xl font-bold text-purple-600">
                  {tournamentData.stats.completed ? '100%' : 'En Progreso'}
                </div>
                <div class="text-slate-600 font-medium">Estado del Torneo</div>
              </div>
            </div>
          </div>
        </>
      )}
      <!-- Back Button -->
      <div class="mt-8">
        <a 
          href="/torneos" 
          class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Volver a Torneos
        </a>
      </div>
    </div>
  </section>
</PublicLayout>
