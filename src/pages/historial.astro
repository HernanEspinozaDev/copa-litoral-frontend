---
import PublicLayout from '../layouts/PublicLayout.astro';

const title = 'Historial Copa Litoral - Torneos Finalizados';
const description = 'Historial completo de torneos finalizados Copa Litoral con campeones, finalistas y estadÃ­sticas de tenis';

// Obtener datos desde la API durante el build (SSR)
let allTournaments = [];
try {
  const response = await fetch(`${Astro.url.origin}/api/tournaments-history-data`);
  if (!response.ok) {
    throw new Error(`HTTP error! status: ${response.status}`);
  }
  const result = await response.json();
  
  // La API devuelve { success: true, data: [...] }
  const data = result.data || [];
  
  // Asegurarse de que data sea un array
  allTournaments = Array.isArray(data) ? data : [];
  
  console.log('Tournaments loaded:', allTournaments.length);
  console.log('Sample tournament:', JSON.stringify(allTournaments[0], null, 2));
} catch (error) {
  console.error('Error loading tournament data:', error);
  allTournaments = [];
}

// Agrupar torneos por aÃ±o
const torneosPorAnio = allTournaments.reduce((acc, torneo) => {
  const anio = torneo.anio;
  if (!acc[anio]) {
    acc[anio] = [];
  }
  acc[anio].push({
    ...torneo,
    // Asegurarse de que las fechas estÃ©n en el formato correcto
    fechas: torneo.fechas || 'Fechas no especificadas',
    // Asegurarse de que las categorÃ­as tengan la estructura esperada
    categorias: torneo.categorias || []
  });
  return acc;
}, {});

const years = Object.keys(torneosPorAnio).sort((a, b) => b - a);
---

<PublicLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-blue-900 via-blue-800 to-orange-600">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Historial Copa Litoral</h1>
      <p class="text-xl text-white/90 max-w-2xl mx-auto">
        Palmares completos de todos los torneos finalizados con campeones y finalistas
      </p>
    </div>
  </section>

  <!-- Year Navigation -->
  <section class="py-8 bg-slate-100">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex flex-wrap gap-2" id="year-nav">
        {years.map((year, index) => (
          <button 
            class={`year-btn px-4 py-2 rounded-lg font-medium ${index === 0 ? 'bg-green-600 text-white' : 'bg-slate-300 text-slate-700'}`}
            data-year={year}
          >
            {year}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Tournaments Section -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4">
      {years.map((year, index) => (
        <div id={`tournaments-${year}`} class={`year-tournaments space-y-6 ${index > 0 ? 'hidden' : ''}`}>
          {torneosPorAnio[year].map(torneo => (
            <details class="bg-white rounded-xl shadow-lg overflow-hidden group">
              <summary class="bg-gradient-to-r from-blue-600 to-orange-600 p-6 cursor-pointer flex items-center justify-between">
                <div>
                  <h3 class="text-2xl font-bold text-white">{torneo.titulo}</h3>
                  <p class="text-white/90 text-sm mt-1">{torneo.lugar} â€¢ {torneo.fechas}</p>
                  <div class="mt-2">
                    <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">
                      Torneo Finalizado
                    </span>
                  </div>
                </div>
                <svg class="w-6 h-6 text-white transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>

                <div class="p-6 space-y-8">
                  {/* Champions by Category */}
                  <div>
                    <h4 class="text-xl font-semibold mb-6 text-slate-900 flex items-center">
                      <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                      </svg>
                      Campeones por CategorÃ­a
                    </h4>
                    
                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
                      {torneo.categorias.map(categoria => (
                        <div class="bg-gradient-to-br from-yellow-50 to-orange-50 rounded-lg p-4 border border-yellow-200">
                          <h5 class="font-bold text-center mb-4 text-slate-900">{categoria.nombre}</h5>
                          
                          {/* Champion */}
                          {categoria.campeon && (
                            <div class="mb-4 text-center">
                              <div class="w-12 h-12 bg-yellow-500 rounded-full mx-auto mb-2 flex items-center justify-center">
                                <span class="text-2xl">ðŸ‘‘</span>
                              </div>
                              <div class="font-semibold text-slate-900">{categoria.campeon.nombre}</div>
                              {categoria.campeon.club && <div class="text-sm text-slate-600">{categoria.campeon.club}</div>}
                              <div class="text-xs text-green-600 font-medium">CampeÃ³n</div>
                            </div>
                          )}

                          {/* Finalist */}
                          {categoria.finalista && (
                            <div class="mb-4 text-center">
                              <div class="w-10 h-10 bg-slate-300 rounded-full mx-auto mb-1 flex items-center justify-center">
                                <span class="text-lg">ðŸ¥ˆ</span>
                              </div>
                              <div class="font-medium text-slate-900">{categoria.finalista.nombre}</div>
                              {categoria.finalista.club && <div class="text-sm text-slate-600">{categoria.finalista.club}</div>}
                              <div class="text-xs text-slate-500">Finalista</div>
                            </div>
                          )}

                          {/* Stats */}
                          {categoria.campeon && categoria.campeon.partidosGanados && (
                            <div class="text-xs space-y-1 text-center">
                              <div class="flex justify-between">
                                <span class="text-slate-600">Partidos:</span>
                                <span class="font-medium">{categoria.campeon.partidosGanados}</span>
                              </div>
                              <div class="flex justify-between">
                                <span class="text-slate-600">Sets:</span>
                                <span class="font-medium">{categoria.campeon.setsGanados}</span>
                              </div>
                              <div class="flex justify-between">
                                <span class="text-slate-600">Juegos:</span>
                                <span class="font-medium">{categoria.campeon.juegosGanados}</span>
                              </div>
                            </div>
                          )}

                          {/* Semifinalists */}
                          {categoria.semifinalistas && categoria.semifinalistas.length > 0 && (
                            <div class="mt-4 pt-2 border-t border-yellow-200">
                              <div class="text-xs font-medium text-center text-slate-600 mb-2">Semifinalistas:</div>
                              <div class="space-y-1">
                                {categoria.semifinalistas.map(semifinalista => (
                                  <div class="text-xs text-center text-slate-500">
                                    {semifinalista.nombre} {semifinalista.club ? `(${semifinalista.club})` : ''}
                                  </div>
                                ))}
                              </div>
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>

                  {/* Tournament Statistics */}
                  {torneo.estadisticas && (
                    <div class="bg-slate-50 rounded-lg p-6">
                      <h4 class="text-lg font-semibold mb-4 text-slate-900 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                        EstadÃ­sticas del Torneo
                      </h4>
                      
                      <div class="grid md:grid-cols-4 gap-4">
                        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
                          <div class="text-2xl font-bold text-blue-600">{torneo.estadisticas.totalPartidos}</div>
                          <div class="text-sm text-slate-600">Partidos Totales</div>
                        </div>
                        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
                          <div class="text-2xl font-bold text-green-600">{torneo.estadisticas.totalJugadores}</div>
                          <div class="text-sm text-slate-600">Jugadores</div>
                        </div>
                        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
                          <div class="text-2xl font-bold text-orange-600">{torneo.estadisticas.totalClubes}</div>
                          <div class="text-sm text-slate-600">Clubes</div>
                        </div>
                        <div class="bg-white rounded-lg p-4 text-center shadow-sm">
                          <div class="text-2xl font-bold text-purple-600">{torneo.estadisticas.duracion}</div>
                          <div class="text-sm text-slate-600">DuraciÃ³n</div>
                        </div>
                      </div>
                    </div>
                  )}
                </div>
              </details>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const yearNav = document.getElementById('year-nav');
      const tournamentsContainer = document.querySelector('.max-w-7xl.mx-auto.px-4');

      yearNav.addEventListener('click', (e) => {
        if (e.target.classList.contains('year-btn')) {
          const selectedYear = e.target.dataset.year;

          // Update button styles
          yearNav.querySelectorAll('.year-btn').forEach(btn => {
            btn.classList.remove('bg-green-600', 'text-white');
            btn.classList.add('bg-slate-300', 'text-slate-700');
          });
          e.target.classList.add('bg-green-600', 'text-white');
          e.target.classList.remove('bg-slate-300', 'text-slate-700');

          // Show/hide tournaments
          document.querySelectorAll('.year-tournaments').forEach(div => {
            if (div.id === `tournaments-${selectedYear}`) {
              div.classList.remove('hidden');
            } else {
              div.classList.add('hidden');
            }
          });
        }
      });
    });
  </script>
</PublicLayout>