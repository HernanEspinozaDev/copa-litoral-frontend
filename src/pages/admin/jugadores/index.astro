---
// src/pages/admin/jugadores/index.astro
import AdminLayout from '@layouts/AdminLayout.astro';
import Toast from '@components/Toast.astro';

// Obtener torneos y jugadores
const [torneosResponse, jugadoresResponse] = await Promise.all([
  fetch(`${Astro.url.origin}/api/tournaments-data`),
  fetch(`${Astro.url.origin}/api/jugadores-organizados`)
]);

const torneos = await torneosResponse.json();
const { data: jugadoresOrganizados } = await jugadoresResponse.json();

// Organizar por años
const years = [...new Set(torneos.map(t => t.anio))].sort((a, b) => b - a);

const statusMap = {
  inscrito: { text: 'Inscrito', class: 'bg-emerald-100 text-emerald-800 border-emerald-200' },
  pendiente: { text: 'Pendiente', class: 'bg-amber-100 text-amber-800 border-amber-200' },
  rechazado: { text: 'Rechazado', class: 'bg-red-100 text-red-800 border-red-200' },
};
---

<AdminLayout title="Jugadores" description="Gestión de jugadores por torneo y categoría">
  
  <!-- Header -->
  <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-2xl p-8 mb-8 text-white">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold mb-2">Gestión de Jugadores</h1>
        <p class="text-blue-100">Organiza y gestiona las inscripciones por torneo y categoría</p>
      </div>
      <a href="/admin/jugadores/nuevo" class="bg-white text-blue-600 hover:bg-blue-50 font-semibold py-3 px-6 rounded-xl transition duration-300 inline-flex items-center shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Nuevo Jugador
      </a>
    </div>
  </div>

  <!-- Year Navigation -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Filtrar por año</h2>
    <div class="flex flex-wrap gap-3" id="year-nav">
      {years.map((year, index) => (
        <button 
          class={`year-btn px-6 py-3 rounded-xl font-medium transition-all duration-200 ${index === 0 ? 'bg-blue-600 text-white shadow-lg' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
          data-year={year}
        >
          {year}
        </button>
      ))}
    </div>
  </div>

  {years.map((year, yearIndex) => {
    const torneosDelAnio = torneos.filter(t => t.anio === year);
    
    return (
      <div id={`jugadores-${year}`} class={`year-section ${yearIndex > 0 ? 'hidden' : ''}`}>
        <div class="space-y-6">
          {torneosDelAnio.map(torneo => {
            const statusInfo = {
              'inscripciones-abiertas': { text: 'Inscripciones Abiertas', class: 'bg-emerald-100 text-emerald-800 border-emerald-200' },
              'proximamente': { text: 'Próximamente', class: 'bg-amber-100 text-amber-800 border-amber-200' },
              'en-juego': { text: 'En Juego', class: 'bg-blue-100 text-blue-800 border-blue-200' },
              'finalizado': { text: 'Finalizado', class: 'bg-gray-100 text-gray-800 border-gray-200' }
            }[torneo.estado] || { text: 'Sin estado', class: 'bg-gray-100 text-gray-800 border-gray-200' };
            
            return (
              <details class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
                <summary class="bg-gradient-to-r from-blue-600 to-orange-600 p-6 cursor-pointer list-none flex items-center justify-between">
                  <div>
                    <h2 class="text-2xl font-bold text-white mb-1">{torneo.titulo}</h2>
                    <p class="text-white/80 flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      {torneo.lugar}
                    </p>
                    <p class="text-white/80 flex items-center mt-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {torneo.fechas}
                    </p>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class={`px-3 py-1 text-xs font-semibold rounded-full border ${statusInfo.class}`}>
                      {statusInfo.text}
                    </span>
                    <svg class="w-5 h-5 text-white transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>
                </summary>
                
                <!-- Categories -->
                <div class="p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4">Categorías e Inscripciones</h3>
                  <div class="space-y-4">
                    {torneo.categorias.map(categoria => {
                      const jugadoresEnCategoria = jugadoresOrganizados[year]?.[torneo.titulo]?.categorias?.[categoria.nombre] || [];
                      const totalInscritos = jugadoresEnCategoria.length;
                      const porcentajeOcupacion = Math.round((totalInscritos / categoria.maxJugadores) * 100);
                      
                      return (
                        <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                          <div class="flex justify-between items-center mb-3">
                            <div>
                              <h4 class="font-semibold text-gray-900">{categoria.nombre}</h4>
                              <p class="text-sm text-gray-600">{totalInscritos}/{categoria.maxJugadores} jugadores</p>
                            </div>
                            <div class="text-right">
                              <p class="text-sm font-medium text-gray-900">
                                ${categoria.precio?.socio?.toLocaleString() || 'N/A'} / ${categoria.precio?.general?.toLocaleString() || 'N/A'}
                              </p>
                              <p class="text-xs text-gray-500">Socio / General</p>
                            </div>
                          </div>
                          
                          <!-- Progress Bar -->
                          <div class="mb-3">
                            <div class="flex justify-between text-xs text-gray-600 mb-1">
                              <span>Ocupación</span>
                              <span>{porcentajeOcupacion}%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                              <div 
                                class={`h-2 rounded-full transition-all duration-300 ${
                                  porcentajeOcupacion >= 90 ? 'bg-red-500' : 
                                  porcentajeOcupacion >= 70 ? 'bg-amber-500' : 'bg-emerald-500'
                                }`}
                                style={`width: ${porcentajeOcupacion}%`}
                              ></div>
                            </div>
                          </div>
                          
                          <!-- Actions -->
                          <div class="flex justify-between items-center">
                            <button 
                              class="inscribir-btn text-sm font-medium text-blue-600 hover:text-blue-800 transition-colors"
                              data-torneo={torneo.titulo}
                              data-categoria={categoria.nombre}
                              data-year={year}
                            >
                              + Inscribir Jugador
                            </button>
                            {totalInscritos > 0 && (
                              <button 
                                class="ver-jugadores-btn text-sm font-medium text-gray-600 hover:text-gray-800 transition-colors"
                                data-torneo={torneo.titulo}
                                data-categoria={categoria.nombre}
                                data-year={year}
                              >
                                Ver Jugadores ({totalInscritos})
                              </button>
                            )}
                          </div>
                        </div>
                      );
                    })}
                  </div>
                </div>
              </details>
            );
          })}
        </div>
      </div>
    );
  })}

  <!-- Modal para ver jugadores -->
  <div id="jugadoresModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-[80vh] overflow-hidden">
        <div class="p-6 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 id="modalTitle" class="text-xl font-bold text-gray-900"></h3>
            <button id="closeModal" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        <div class="p-6 overflow-y-auto max-h-96">
          <div id="jugadoresList" class="space-y-3"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const yearNav = document.getElementById('year-nav');
      const modal = document.getElementById('jugadoresModal');
      const closeModal = document.getElementById('closeModal');
      const modalTitle = document.getElementById('modalTitle');
      const jugadoresList = document.getElementById('jugadoresList');

      // Year navigation
      yearNav.addEventListener('click', (e) => {
        if (e.target.classList.contains('year-btn')) {
          const selectedYear = e.target.dataset.year;

          // Update button styles
          yearNav.querySelectorAll('.year-btn').forEach(btn => {
            btn.classList.remove('bg-blue-600', 'text-white', 'shadow-lg');
            btn.classList.add('bg-gray-100', 'text-gray-700');
          });
          e.target.classList.add('bg-blue-600', 'text-white', 'shadow-lg');
          e.target.classList.remove('bg-gray-100', 'text-gray-700');

          // Show/hide sections
          document.querySelectorAll('.year-section').forEach(div => {
            if (div.id === `jugadores-${selectedYear}`) {
              div.classList.remove('hidden');
            } else {
              div.classList.add('hidden');
            }
          });
        }
      });

      // No need for toggle functionality since we're using native HTML details/summary

      // Inscribir jugador
      document.addEventListener('click', (e) => {
        if (e.target.classList.contains('inscribir-btn')) {
          const torneo = e.target.dataset.torneo;
          const categoria = e.target.dataset.categoria;
          const year = e.target.dataset.year;
          
          // Redirect to new player form with pre-filled data
          const params = new URLSearchParams({
            torneo: torneo,
            categoria: categoria,
            año: year
          });
          window.location.href = `/admin/jugadores/nuevo?${params.toString()}`;
        }
      });

      // Ver jugadores
      document.addEventListener('click', async (e) => {
        if (e.target.classList.contains('ver-jugadores-btn')) {
          const torneo = e.target.dataset.torneo;
          const categoria = e.target.dataset.categoria;
          const year = e.target.dataset.year;
          
          try {
            const response = await fetch('/api/jugadores-organizados');
            const { data: jugadoresOrganizados } = await response.json();
            
            const jugadores = jugadoresOrganizados[year]?.[torneo]?.categorias?.[categoria] || [];
            
            modalTitle.textContent = `${categoria} - ${torneo} (${year})`;
            jugadoresList.innerHTML = '';
            
            if (jugadores.length === 0) {
              jugadoresList.innerHTML = '<p class="text-gray-500 text-center">No hay jugadores inscritos en esta categoría.</p>';
            } else {
              jugadores.forEach(jugador => {
                const statusInfo = {
                  inscrito: { text: 'Inscrito', class: 'bg-emerald-100 text-emerald-800' },
                  pendiente: { text: 'Pendiente', class: 'bg-amber-100 text-amber-800' },
                  rechazado: { text: 'Rechazado', class: 'bg-red-100 text-red-800' }
                }[jugador.estado] || { text: 'Pendiente', class: 'bg-amber-100 text-amber-800' };
                
                const jugadorCard = document.createElement('div');
                jugadorCard.className = 'bg-gray-50 rounded-lg p-4 flex justify-between items-center';
                jugadorCard.innerHTML = `
                  <div>
                    <h4 class="font-semibold text-gray-900">${jugador.nombre} ${jugador.apellido}</h4>
                    <p class="text-sm text-gray-600">${jugador.club}</p>
                    <p class="text-xs text-gray-500">${jugador.email}</p>
                  </div>
                  <div class="text-right">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full ${statusInfo.class}">
                      ${statusInfo.text}
                    </span>
                    <div class="mt-2 space-x-2">
                      <a href="/admin/jugadores/${jugador.id}/editar" class="text-xs text-blue-600 hover:text-blue-800">Editar</a>
                      <button class="text-xs text-red-600 hover:text-red-800 delete-player-btn" data-id="${jugador.id}">Eliminar</button>
                    </div>
                  </div>
                `;
                jugadoresList.appendChild(jugadorCard);
              });
            }
            
            modal.classList.remove('hidden');
          } catch (error) {
            alert('Error al cargar jugadores: ' + error.message);
          }
        }
      });

      // Close modal
      closeModal.addEventListener('click', () => {
        modal.classList.add('hidden');
      });

      // Close modal on backdrop click
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.add('hidden');
        }
      });

      // Delete player from modal
      document.addEventListener('click', async (e) => {
        if (e.target.classList.contains('delete-player-btn')) {
          const jugadorId = e.target.dataset.id;
          if (confirm('¿Estás seguro de que deseas eliminar este jugador? Esta acción no se puede deshacer.')) {
            try {
              const response = await fetch(`/api/jugadores/${jugadorId}`, {
                method: 'DELETE'
              });
              
              if (response.ok) {
                alert('Jugador eliminado correctamente');
                window.location.reload();
              } else {
                const result = await response.json();
                alert(`Error al eliminar el jugador: ${result.error}`);
              }
            } catch (error) {
              alert('Error de conexión: ' + error.message);
            }
          }
        }
      });
    });
  </script>
</AdminLayout>