---
// src/pages/admin/jugadores/index.astro
import AdminLayout from '@layouts/AdminLayout.astro';
import { getPlayers } from '@lib/database';

const players = getPlayers();
---

<AdminLayout>
  <slot name="title" slot="title">Jugadores - Copa Litoral</slot>
  <slot name="description" slot="description">Gestión de jugadores</slot>
  
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-primary">Jugadores</h1>
    <a href="/admin/jugadores/nuevo" class="bg-primary hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
      Nuevo Jugador
    </a>
  </div>
  
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categoría</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {players.map(player => (
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{player.name}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{player.email}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{player.category}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <a href={`/admin/jugadores/editar/${player.id}`} class="text-primary hover:text-orange-600 mr-4">Editar</a>
              <button 
                data-id={player.id}
                class="delete-player text-red-600 hover:text-red-900"
              >
                Eliminar
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  
  <script>
    document.querySelectorAll('.delete-player').forEach(button => {
      button.addEventListener('click', async (e) => {
        const playerID = e.target.dataset.id;
        if (confirm('¿Estás seguro de que deseas eliminar este jugador?')) {
          try {
            const response = await fetch(`/api/jugadores/delete/${playerID}`, {
              method: 'DELETE'
            });
            
            if (response.ok) {
              alert('Jugador eliminado correctamente');
              // Remove the row from the table
              e.target.closest('tr').remove();
            } else {
              alert('Error al eliminar el jugador');
            }
          } catch (error) {
            alert('Error de conexión: ' + error.message);
          }
        }
      });
    });
  </script>
</AdminLayout>
