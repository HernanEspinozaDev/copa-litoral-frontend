---
// src/pages/admin/partidos/index.astro
import AdminLayout from '@layouts/AdminLayout.astro';
import { getMatches, getTournaments } from '@lib/database';

const matches = getMatches();
const tournaments = getTournaments();

// Create a map of tournament IDs to names for display
const tournamentMap = {};
tournaments.forEach(tournament => {
  tournamentMap[tournament.id] = tournament.name;
});
---

<AdminLayout>
  <slot name="title" slot="title">Partidos - Copa Litoral</slot>
  <slot name="description" slot="description">Gestión de partidos</slot>
  
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-primary">Partidos</h1>
    <a href="/admin/partidos/nuevo" class="bg-primary hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
      Nuevo Partido
    </a>
  </div>
  
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Torneo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jugador 1</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jugador 2</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Resultado</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {matches.map(match => (
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{tournamentMap[match.tournamentId] || match.tournamentId}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{match.player1}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{match.player2}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{match.date}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{match.result}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <a href={`/admin/partidos/editar/${match.id}`} class="text-primary hover:text-orange-600 mr-4">Editar</a>
              <button 
                data-id={match.id}
                class="delete-match text-red-600 hover:text-red-900"
              >
                Eliminar
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  
  <script>
    document.querySelectorAll('.delete-match').forEach(button => {
      button.addEventListener('click', async (e) => {
        const matchID = e.target.dataset.id;
        if (confirm('¿Estás seguro de que deseas eliminar este partido?')) {
          try {
            const response = await fetch(`/api/partidos/delete/${matchID}`, {
              method: 'DELETE'
            });
            
            if (response.ok) {
              alert('Partido eliminado correctamente');
              // Remove the row from the table
              e.target.closest('tr').remove();
            } else {
              alert('Error al eliminar el partido');
            }
          } catch (error) {
            alert('Error de conexión: ' + error.message);
          }
        }
      });
    });
  </script>
</AdminLayout>
