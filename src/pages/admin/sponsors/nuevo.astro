---
// src/pages/admin/sponsors/nuevo.astro
import AdminLayout from '@layouts/AdminLayout.astro';
---

<AdminLayout>
  <slot name="title" slot="title">Nuevo Sponsor - Copa Litoral</slot>
  <slot name="description" slot="description">Registrar un nuevo sponsor</slot>
  
  <h1 class="text-3xl font-bold mb-6 text-primary">Nuevo Sponsor</h1>
  
  <form id="sponsorForm" class="bg-white p-6 rounded-lg shadow-md max-w-2xl">
    <div class="mb-4">
      <label for="name" class="block text-gray-700 font-bold mb-2">Nombre</label>
      <input type="text" id="name" name="name" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary" />
    </div>
    
    <div class="mb-4">
      <label for="logoUrl" class="block text-gray-700 font-bold mb-2">URL del Logo</label>
      <input type="url" id="logoUrl" name="logoUrl" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary" />
    </div>
    
    <div class="mb-4">
      <label for="website" class="block text-gray-700 font-bold mb-2">Website</label>
      <input type="url" id="website" name="website" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary" />
    </div>
    
    <div class="flex space-x-4">
      <button type="submit" class="bg-primary hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
        Crear Sponsor
      </button>
      <a href="/admin/sponsors" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
        Cancelar
      </a>
    </div>
  </form>
  
  <script>
    document.getElementById('sponsorForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const data = {
        name: formData.get('name'),
        logoUrl: formData.get('logoUrl'),
        website: formData.get('website')
      };
      
      try {
        const response = await fetch('/api/sponsors/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          alert('Sponsor creado correctamente');
          window.location.href = '/admin/sponsors';
        } else {
          alert('Error al crear el sponsor');
        }
      } catch (error) {
        alert('Error de conexi√≥n: ' + error.message);
      }
    });
  </script>
</AdminLayout>
