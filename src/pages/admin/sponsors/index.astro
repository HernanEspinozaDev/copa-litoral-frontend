---
// src/pages/admin/sponsors/index.astro
import AdminLayout from '@layouts/AdminLayout.astro';
import { getSponsors } from '@lib/database';

const sponsors = getSponsors();
---

<AdminLayout>
  <slot name="title" slot="title">Sponsors - Copa Litoral</slot>
  <slot name="description" slot="description">Gestión de sponsors</slot>
  
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-primary">Sponsors</h1>
    <a href="/admin/sponsors/nuevo" class="bg-primary hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
      Nuevo Sponsor
    </a>
  </div>
  
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Logo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Website</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {sponsors.map(sponsor => (
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{sponsor.name}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <img src={sponsor.logoUrl} alt={sponsor.name} class="h-10 w-10 object-contain" />
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <a href={sponsor.website} target="_blank" class="text-primary hover:text-orange-600">{sponsor.website}</a>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <a href={`/admin/sponsors/editar/${sponsor.id}`} class="text-primary hover:text-orange-600 mr-4">Editar</a>
              <button 
                data-id={sponsor.id}
                class="delete-sponsor text-red-600 hover:text-red-900"
              >
                Eliminar
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  
  <script>
    document.querySelectorAll('.delete-sponsor').forEach(button => {
      button.addEventListener('click', async (e) => {
        const sponsorID = e.target.dataset.id;
        if (confirm('¿Estás seguro de que deseas eliminar este sponsor?')) {
          try {
            const response = await fetch(`/api/sponsors/delete/${sponsorID}`, {
              method: 'DELETE'
            });
            
            if (response.ok) {
              alert('Sponsor eliminado correctamente');
              // Remove the row from the table
              e.target.closest('tr').remove();
            } else {
              alert('Error al eliminar el sponsor');
            }
          } catch (error) {
            alert('Error de conexión: ' + error.message);
          }
        }
      });
    });
  </script>
</AdminLayout>
