// src/pages/admin/dashboard.astro
import AdminLayout from '@layouts/AdminLayout.astro';

// Fetch data from synchronized endpoints
const [torneosResponse, jugadoresResponse, partidosResponse] = await Promise.all([
  fetch(`${Astro.url.origin}/api/tournaments-data`),
  fetch(`${Astro.url.origin}/api/jugadores-organizados`),
  fetch(`${Astro.url.origin}/api/partidos`)
]);

const torneos = await torneosResponse.json();
const { data: jugadoresOrganizados } = await jugadoresResponse.json();
const { success, data: partidos } = await partidosResponse.json();

// Calculate statistics
const currentDate = new Date();
const currentYear = currentDate.getFullYear();

// Tournament statistics
const torneosActivos = torneos.filter(t => 
  t.estado === 'inscripciones-abiertas' || t.estado === 'en-juego'
);
const torneosProximos = torneos.filter(t => t.estado === 'proximamente');
const torneosFfinalizados = torneos.filter(t => t.estado === 'finalizado');

// Player statistics - count all players across all tournaments
let totalJugadores = 0;
let jugadoresEsteAno = 0;
let jugadoresPorCategoria = {};
let jugadoresPorEstado = { inscrito: 0, pendiente: 0, rechazado: 0 };

Object.values(jugadoresOrganizados).forEach(anio => {
  Object.values(anio).forEach(torneo => {
    Object.values(torneo).forEach(categoria => {
      if (Array.isArray(categoria)) {
        totalJugadores += categoria.length;
        
        // Count by year
        if (parseInt(Object.keys(jugadoresOrganizados).find(year => 
          jugadoresOrganizados[year][Object.keys(anio).find(t => anio[t] === torneo)]
        )) === currentYear) {
          jugadoresEsteAno += categoria.length;
        }
        
        // Count by category and status
        categoria.forEach(jugador => {
          const cat = jugador.categoria || 'Sin categoría';
          jugadoresPorCategoria[cat] = (jugadoresPorCategoria[cat] || 0) + 1;
          
          const estado = jugador.estado || 'pendiente';
          jugadoresPorEstado[estado] = (jugadoresPorEstado[estado] || 0) + 1;
        });
      }
    });
  });
});

// Match statistics
const totalPartidos = success ? partidos.length : 0;
const partidosEsteAno = success ? partidos.filter(p => {
  const matchYear = new Date(p.fecha).getFullYear();
  return matchYear === currentYear;
}).length : 0;

// Recent activity
const ultimosJugadores = [];
Object.entries(jugadoresOrganizados).forEach(([anio, torneoData]) => {
  Object.entries(torneoData).forEach(([torneoNombre, categorias]) => {
    Object.entries(categorias).forEach(([categoria, jugadores]) => {
      if (Array.isArray(jugadores)) {
        jugadores.forEach(jugador => {
          ultimosJugadores.push({
            ...jugador,
            torneo: torneoNombre,
            anio: anio
          });
        });
      }
    });
  });
});

// Sort by most recent (using ID as timestamp)
ultimosJugadores.sort((a, b) => parseInt(b.id) - parseInt(a.id));
const recentPlayers = ultimosJugadores.slice(0, 5);

// Recent matches
const recentMatches = success ? partidos
  .sort((a, b) => new Date(b.fecha) - new Date(a.fecha))
  .slice(0, 5) : [];

// Active tournaments for display
const activeTournaments = torneosActivos.slice(0, 3);
---

<AdminLayout title="Dashboard" description="Panel de control con estadísticas y datos en tiempo real">
  <!-- Resumen de Estadísticas -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-100 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
            <path d="M6 4a2 2 0 012-2h4a2 2 0 012 2v14l-5-2.5L4 18V4z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Torneos Totales</p>
          <p class="text-2xl font-bold text-gray-900">{torneos.length}</p>
        </div>
      </div>
      <div class="mt-4">
        <div class="flex items-center">
          <span class="text-blue-500 text-sm font-medium">{torneosActivos.length} activos</span>
          <span class="text-gray-500 text-sm ml-2">• {torneosProximos.length} próximos</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-100 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Jugadores Registrados</p>
          <p class="text-2xl font-bold text-gray-900">{totalJugadores}</p>
        </div>
      </div>
      <div class="mt-4">
        <div class="flex items-center">
          <span class="text-green-500 text-sm font-medium">{jugadoresEsteAno} este año</span>
          <span class="text-gray-500 text-sm ml-2">• {jugadoresPorEstado.inscrito} inscritos</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-purple-100 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5 3a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V5a2 2 0 00-2-2H5zm0 2h10v7h-2l-1 2H8l-1-2H5V5z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Partidos Totales</p>
          <p class="text-2xl font-bold text-gray-900">{totalPartidos}</p>
        </div>
      </div>
      <div class="mt-4">
        <div class="flex items-center">
          <span class="text-purple-500 text-sm font-medium">{partidosEsteAno} este año</span>
          <span class="text-gray-500 text-sm ml-2">• {recentMatches.length} recientes</span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-yellow-100 mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6.672 1.911a1 1 0 10-1.932.518l.259.966a1 1 0 001.932-.518l-.26-.966zM2.429 4.74a1 1 0 10-.517 1.932l.966.259a1 1 0 00.517-1.932l-.966-.26zm8.814-.569a1 1 0 00-1.415-1.414l-.707.707a1 1 0 101.415 1.415l.707-.708zm-7.071 7.072l.707-.707A1 1 0 003.465 9.12l-.708.707a1 1 0 001.415 1.415zm3.2-5.171a1 1 0 00-1.3 1.3l4 10a1 1 0 001.823.075l1.38-2.759 3.018 3.02a1 1 0 001.414-1.415l-3.019-3.02 2.76-1.379a1 1 0 00-.076-1.822l-10-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Estados Jugadores</p>
          <p class="text-2xl font-bold text-gray-900">{jugadoresPorEstado.pendiente}</p>
        </div>
      </div>
      <div class="mt-4">
        <div class="flex items-center">
          <span class="text-yellow-500 text-sm font-medium">Pendientes</span>
          <span class="text-gray-500 text-sm ml-2">• {jugadoresPorEstado.rechazado} rechazados</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Gráficos y Datos -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Torneos Activos -->
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Torneos Activos</h2>
      <div class="space-y-4">
        {activeTournaments.length > 0 ? activeTournaments.map((tournament) => (
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <h3 class="font-medium text-gray-900">{tournament.titulo}</h3>
              <p class="text-sm text-gray-500">{tournament.fechas} - {tournament.lugar}</p>
              <p class="text-xs text-gray-400">{tournament.anio}</p>
            </div>
            <div class="flex items-center space-x-2">
              <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                tournament.estado === 'inscripciones-abiertas' 
                  ? 'text-green-800 bg-green-100' 
                  : 'text-blue-800 bg-blue-100'
              }`}>
                {tournament.estado === 'inscripciones-abiertas' ? 'Inscripciones Abiertas' : 'En Juego'}
              </span>
              <a href={`/admin/torneos/editar/${tournament.id}`} class="text-blue-600 hover:text-blue-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
              </a>
            </div>
          </div>
        )) : (
          <div class="text-center py-8 text-gray-500">
            <p>No hay torneos activos en este momento</p>
          </div>
        )}
      </div>
    </div>

    <!-- Últimos Jugadores -->
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Últimos Jugadores Registrados</h2>
      <div class="overflow-hidden">
        {recentPlayers.length > 0 ? (
          <div class="space-y-3">
            {recentPlayers.map((player) => (
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                  <h4 class="font-medium text-gray-900">{player.nombre} {player.apellido}</h4>
                  <p class="text-sm text-gray-500">{player.categoria} - {player.torneo}</p>
                  <p class="text-xs text-gray-400">{player.email || 'Sin email'}</p>
                </div>
                <div class="flex items-center space-x-2">
                  <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                    player.estado === 'inscrito' 
                      ? 'text-green-800 bg-green-100'
                      : player.estado === 'pendiente'
                      ? 'text-yellow-800 bg-yellow-100'
                      : 'text-red-800 bg-red-100'
                  }`}>
                    {player.estado === 'inscrito' ? 'Inscrito' : 
                     player.estado === 'pendiente' ? 'Pendiente' : 'Rechazado'}
                  </span>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-8 text-gray-500">
            <p>No hay jugadores registrados</p>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Últimos Partidos -->
  <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Últimos Partidos</h2>
    <div class="overflow-x-auto">
      {recentMatches.length > 0 ? (
        <div class="space-y-3">
          {recentMatches.map(partido => (
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex-1">
                <div class="flex items-center space-x-4">
                  <div class="text-center">
                    <p class="font-medium text-gray-900">{partido.jugador1}</p>
                    <p class="text-xs text-gray-500">vs</p>
                    <p class="font-medium text-gray-900">{partido.jugador2}</p>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-700">{partido.torneo}</p>
                    <p class="text-xs text-gray-500">{partido.categoria}</p>
                    <p class="text-xs text-gray-400">{new Date(partido.fecha).toLocaleDateString()}</p>
                  </div>
                </div>
              </div>
              <div class="text-right">
                {partido.resultado ? (
                  <div class="text-sm font-medium text-gray-900">
                    <p>{partido.resultado}</p>
                    <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">
                      Finalizado
                    </span>
                  </div>
                ) : (
                  <span class="px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded-full">
                    Programado
                  </span>
                )}
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-8 text-gray-500">
          <p>No hay partidos registrados</p>
        </div>
      )}
    </div>
  </div>

  <!-- Estadísticas por Categoría -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Jugadores por Categoría</h2>
      <div class="space-y-3">
        {Object.entries(jugadoresPorCategoria).map(([categoria, cantidad]) => (
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-700">{categoria}</span>
            <div class="flex items-center space-x-2">
              <div class="w-24 bg-gray-200 rounded-full h-2">
                <div 
                  class="bg-blue-600 h-2 rounded-full" 
                  style={`width: ${(cantidad / totalJugadores) * 100}%`}
                ></div>
              </div>
              <span class="text-sm font-bold text-gray-900">{cantidad}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Estados de Inscripción</h2>
      <div class="space-y-4">
        <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="font-medium text-green-900">Inscritos</span>
          </div>
          <span class="text-xl font-bold text-green-900">{jugadoresPorEstado.inscrito}</span>
        </div>
        <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <span class="font-medium text-yellow-900">Pendientes</span>
          </div>
          <span class="text-xl font-bold text-yellow-900">{jugadoresPorEstado.pendiente}</span>
        </div>
        <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <span class="font-medium text-red-900">Rechazados</span>
          </div>
          <span class="text-xl font-bold text-red-900">{jugadoresPorEstado.rechazado}</span>
        </div>
      </div>
    </div>
  </div>
  
</AdminLayout>
