---
// src/pages/admin/torneos/index.astro
import AdminLayout from '@layouts/AdminLayout.astro';
import { getTournaments } from '@lib/database';

const tournaments = getTournaments();
---

<AdminLayout>
  <slot name="title" slot="title">Torneos - Copa Litoral</slot>
  <slot name="description" slot="description">Gestión de torneos</slot>
  
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-primary">Torneos</h1>
    <a href="/admin/torneos/nuevo" class="bg-primary hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
      Nuevo Torneo
    </a>
  </div>
  
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ubicación</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categorías</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {tournaments.map(tournament => (
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{tournament.name}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{tournament.date}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{tournament.location}</td>
            <td class="px-6 py-4 text-sm text-gray-500">
              {tournament.categories.join(', ')}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <a href={`/admin/torneos/editar/${tournament.id}`} class="text-primary hover:text-orange-600 mr-4">Editar</a>
              <button 
                data-id={tournament.id}
                class="delete-tournament text-red-600 hover:text-red-900"
              >
                Eliminar
              </button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
  
  <script>
    document.querySelectorAll('.delete-tournament').forEach(button => {
      button.addEventListener('click', async (e) => {
        const tournamentId = e.target.dataset.id;
        if (confirm('¿Estás seguro de que deseas eliminar este torneo?')) {
          try {
            const response = await fetch(`/api/torneos/delete/${tournamentId}`, {
              method: 'DELETE'
            });
            
            if (response.ok) {
              alert('Torneo eliminado correctamente');
              // Remove the row from the table
              e.target.closest('tr').remove();
            } else {
              alert('Error al eliminar el torneo');
            }
          } catch (error) {
            alert('Error de conexión: ' + error.message);
          }
        }
      });
    });
  </script>
</AdminLayout>
